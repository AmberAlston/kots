FROM repldev/ship-cluster-worker as deps

EXPOSE 3000
EXPOSE 6060

ADD . /go/src/github.com/replicatedhq/ship-cluster/worker
WORKDIR /go/src/github.com/replicatedhq/ship-cluster/worker


RUN make build
RUN cp ./bin/ship-cluster-worker /opt/ship-cluster-worker

ENTRYPOINT ["/opt/ship-cluster-worker"]
